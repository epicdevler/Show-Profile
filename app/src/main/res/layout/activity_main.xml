<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        <ImageView
            android:id="@+id/firstImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/bach_profile"
            />

        <ImageView
            android:id="@+id/secondImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/firstImage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="87dp"
            android:background="@drawable/mozart_profile" />

        <TextView
            android:id="@+id/firstImageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bachName"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/firstImage"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/secondImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/secondImage"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="10dp"
            android:text="@string/mozertName"
            />
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>